<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_app"
    tools:context=".activity.VerifyOtpActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="142dp"
        android:src="@drawable/logosvg" />
    <!-- Horizontal LinearLayout for EditText elements -->
    <!-- Centered Button -->

    <TextView
        android:id="@+id/register_sc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="212dp"
        android:gravity="top"
        android:lineHeight="32sp"
        android:text="@string/otp"
        android:textAppearance="@style/text_bold" />

    <LinearLayout
        android:id="@+id/otp_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <!-- First EditText -->
        <EditText
            android:id="@+id/edit_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/otp_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:minWidth="48dp"
            android:padding="20dp"
            tools:ignore="Autofill,LabelFor" />

        <!-- Second EditText -->
        <EditText
            android:id="@+id/edit_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/otp_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:minWidth="48dp"
            android:padding="20dp"
            tools:ignore="Autofill,LabelFor" />

        <!-- Third EditText -->
        <EditText
            android:id="@+id/edit_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/otp_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:minWidth="48dp"
            android:padding="20dp"
            tools:ignore="Autofill,LabelFor" />

        <!-- Fourth EditText -->
        <EditText
            android:id="@+id/edit_text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/otp_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:minWidth="48dp"
            android:padding="20dp"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <Button
        android:id="@+id/verifyButton"  android:layout_width="283dp"
        android:layout_height="50dp"
        android:layout_below="@id/otp_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_background"
        android:elevation="4dp"
        android:text="@string/verify"
        android:onClick="onVerifyButtonClicked" />
</RelativeLayout>
